{
  "manifest_version": 3,
  "name": "BlackSwan - TSETMC Checker",
  "version": "1.2",
  "description": "Auto fill and check NAV vs Buy/Sell price for funds on TSETMC",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["https://tsetmc.com/*"],
  "content_scripts": [
    {
      "matches": ["https://tsetmc.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "blackswan-tsetmc@amirhp.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}